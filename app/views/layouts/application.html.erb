      <%#     <a class="close" data-dismiss="alert">Ã—</a> %>
      <%#     <%= message %1> %>
      <%#   </div> %>
      <%# <% end %1> %>

    <div id="content">
      <%= yield %>
    </div>

    <footer>
      <div class="wrapper">
        <p class="title">
          Created by <%= link_to 'Marcin Kulik', 'https://github.com/sickill' %>
        </p>

        <p class="links">
          <a href="/faq">F.A.Q.</a>
          <a href="/tos">Terms of Service</a>
          <a href="/privacy">Privacy Policy</a>
        </p>
      </div>
    </footer>

  </body>
</html>
