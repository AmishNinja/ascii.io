<nav class="user-navigation">
  <ul>
    <% if current_user %>
      <li class="avatar"><%= link_to avatar_img(current_user), profile_path(current_user) %></li>
      <li><%= link_to "Log out", logout_path, :class => "logout" %></li>
    <% else %>
      <li><%= link_to "Log in", login_path %></li>
    <% end %>
  </ul>
</nav>
