<section class="supplimental">
  <div class="wrapper">
    <div class="main">
      <h1>Asciicasts by ~<%= @user.nickname %></h1>
      <%= render :partial => 'asciicasts/previews' %>
      <%= paginate @asciicasts %>
    </div>

    <div class="extras">
      <h1><%= @user.nickname %></h1>
      <p><%= avatar_img(@user) %></p>
      <h3><%= @user.asciicasts_count %> asciicasts</h3>

      <% if current_user %>
        <p><%= link_to 'Settings', edit_user_path %></p>
      <% end %>
    </div>
  </div>
</section>


