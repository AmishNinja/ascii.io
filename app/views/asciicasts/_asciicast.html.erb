<div class="asciicast">
  <div class="wrapper">
    <div class="player"></div>
    <div class="clear"></div>
  </div>

  <% unless (defined? skip_description) && skip_description %>
    <div class="description">
      <%= markdown do %><%= asciicast.description.to_s %><% end %>
    </div>
  <% end %>
</div>

<%= player_script(asciicast, :auto_play => local_assigns[:auto_play]) %>
